    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat verify --network amoy"
  },
  "keywords": [
    "agriculture",
    "supply-chain",
    "blockchain",
    "real-time",
    "traceability",
    "ayurvedic"
  ],
  "author": "AyurChakra Team",
  "license": "MIT",
