{
  "name": "ayurchakra-backend",
  "version": "1.0.0",
  "description": "Real-time backend for AyurChakra agricultural supply chain platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "seed": "node src/scripts/seedDatabase.js",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network amoy",
